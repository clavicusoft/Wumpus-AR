<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Name: "
        android:textSize="20sp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/caves_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caves: "
        android:textSize="20sp"
        android:layout_alignLeft="@+id/name_text"
        android:layout_below="@+id/name_text" />

    <TextView
        android:id="@+id/maze_caves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="txt"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/maze_name"
        android:layout_below="@+id/maze_name" />

    <TextView
        android:id="@+id/maze_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="txt"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/name_text"
        android:layout_toEndOf="@+id/name_text" />

    <TextView
        android:id="@+id/maze_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="txt"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/name_text"
        android:layout_toEndOf="@+id/name_text"
        android:visibility="invisible"/>

</RelativeLayout>