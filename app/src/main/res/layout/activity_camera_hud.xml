<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="597dp"
            android:layout_height="351dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="3.10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.428">

        </FrameLayout>

        <ImageView
            android:id="@+id/arrowimage"
            android:layout_width="82dp"
            android:layout_height="71dp"
            android:background="@drawable/arrow"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/arrow"
            app:layout_constraintRight_toLeftOf="@+id/caveimage"
            android:layout_marginRight="396dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="396dp" />

        <ImageView
            android:id="@+id/caveimage"
            android:layout_width="82dp"
            android:layout_height="71dp"
            android:background="@drawable/cave"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/cave"
            android:layout_marginRight="48dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/numCave"
            android:layout_width="86dp"
            android:layout_height="107dp"
            android:layout_marginLeft="351dp"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/numArrow"
            android:layout_marginStart="400dp"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/caveimage" />

        <TextView
            android:id="@+id/numArrow"
            android:layout_width="86dp"
            android:layout_height="107dp"
            android:layout_marginTop="19dp"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/arrowimage"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>