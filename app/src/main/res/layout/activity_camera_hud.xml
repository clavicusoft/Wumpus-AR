<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="0dp"
            android:layout_height="353dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="3.10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

        </FrameLayout>

        <ImageView
            android:id="@+id/arrowimage"
            android:layout_width="56dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/arrow"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="@+id/numCave"
            app:layout_constraintRight_toRightOf="@+id/numCave"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <ImageView
            android:id="@+id/caveimage"
            android:layout_width="58dp"
            android:layout_height="51dp"
            android:background="@drawable/cave"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/cave"
            android:layout_marginEnd="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/camera_preview"
            android:layout_marginRight="56dp" />

        <TextView
            android:id="@+id/numArrow"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="italic"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            app:layout_constraintLeft_toLeftOf="@+id/caveimage"
            app:layout_constraintRight_toRightOf="@+id/caveimage"
            app:layout_constraintTop_toBottomOf="@+id/caveimage"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            />

        <TextView
            android:id="@+id/numCave"
            android:layout_width="54dp"
            android:layout_height="28dp"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="2dp"
            android:text="5"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="italic"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrowimage"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>