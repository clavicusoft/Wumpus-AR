<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:weightSum="1"
    android:background="@color/background">

    <TextView
        android:id="@+id/txtVTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Puntaje del juego:"
        android:textColor="@color/dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtViewVisitedC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="Cuevas visitadas: "
                    android:textColor="@color/medium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtViewNumVisitedC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/darkest"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtViewVisitedBatC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="Cuevas con murciÃ©lago visitadas: "
                    android:textColor="@color/medium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtViewNumVisitedBatC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/darkest"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtViewUsedA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="Flechas utilizadas: "
                    android:textColor="@color/medium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtViewNumUsedA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/darkest"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnRestartGame"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/capsule_darkest"
        android:text="Reiniciar juego"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnExitGame"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/capsule_darkest"
        android:text="Salir del juego"
        android:textColor="@color/white" />

</LinearLayout>