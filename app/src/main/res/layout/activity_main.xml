<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context="com.example.benja.canvas.MainActivity">

    <LinearLayout
        android:layout_width="583dp"
        android:layout_height="655dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/titulo"
            app:srcCompat="@drawable/titulo"
           />

        <Button
            android:id="@+id/Individual"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Individual"
            android:onClick="tipoIndividual"/>

        <Button
            android:id="@+id/buttonMultijuador"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Multijugador"
            android:onClick="tipoMultijugador"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Universidad de Costa Rica"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            tools:layout_editor_absoluteX="355dp"
            tools:layout_editor_absoluteY="250dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
