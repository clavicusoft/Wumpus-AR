<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.benja.canvas.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/imageTitulo"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:background="@drawable/titulo"
            app:srcCompat="@drawable/titulo"
            android:scaleType="fitXY"
            />

        <Button
            android:id="@+id/Individual"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:onClick="tipoIndividual"
            android:text="Single player" />

        <Button
            android:id="@+id/buttonMultijuador"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20px"
            android:onClick="tipoMultijugador"
            android:text="Multiplayer" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Universidad de Costa Rica"
            android:textAlignment="center" />

    </LinearLayout>


</RelativeLayout>
