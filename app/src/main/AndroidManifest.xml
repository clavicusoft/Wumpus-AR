<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.benja.canvas">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/wumpus_icon"
        android:label="Wumpus"
        android:roundIcon="@drawable/wumpus_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SelectPolyActivity"/>
        <activity android:name=".SelectFromLibActivity"></activity>
        <activity android:name=".Coordenadas"></activity>
        <activity android:name=".DrawMazeActivity"></activity>
        <activity android:name=".Bluetooth.BluetoothChat"></activity>
        <activity android:name=".Bluetooth.DeviceListActivity"></activity>
        <activity android:name=".Bluetooth.SelectLabToShare"></activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

</manifest>